%dialog
  %dialog
    - @comments.each do |comment|
      .clearfix
        %span= comment.created_at.ago
        %dt= comment.posted_by
        %dd= comment.body
  %form{:id => "email", :action => "/", :method => "post", :enctype => "text/plain"}
    .input
      %label{:for => "comment_posted_by"} Name:
      %input{:type => "text", :name => "comment_posted_by", :class => "xlarge"}
    .input
      %label{:for => "comment_body"} Message:
      %textarea{:name => "comment_body", :class => "xlarge"}
    .buttons
      %input{:type => "submit", :value => "Post it!", :class => "button"}

